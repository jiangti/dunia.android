        <li><a href="/pub/overview/id/<?php echo $pub['id']; ?>" rel="external"><?php echo $pub['name']; ?> (<?php echo $pub['distance']; ?> m)</a></li>
    <?php endforeach; ?>
    </ul>
</div>
