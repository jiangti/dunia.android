                        <img src="/img/icons/navbar/63-runner.png" width="18" height="25">
                        (<?php echo round($pub['distance'] / 1000, 2); ?> km)
                    <?php endif; ?>

                </div>

                <?php foreach ($pub['promos'] as $promo) { ?>
                <div class="indexDeal">
                    <img src="<?php echo $this->beerIcon($promo['itsOn'], '_sml'); ?>" width="32" height="24"/>
                    <?php echo $this->currency($promo['price']) . ' ' . $promo['liquorType']; ?>

                </div>
