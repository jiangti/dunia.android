<ul data-role="listview" data-inset="true" data-theme="c" data-dividertheme="a">
<?php foreach ($this->pubs as $pub): ?>
    <li>
        <a href="/pub/overview/id/<?php echo $pub['id']; ?>" data-transition="slide" data-ajax="false">
            <div>
                <h3><?php echo $pub['name']; ?></h3>
                <div class="distance">
                    <?php if ($pub['distance'] < 1000): ?>
                        <img src="/img/icons/navbar/102-walk.png" width="14" height="27">
