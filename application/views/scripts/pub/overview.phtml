    });

    $('#dialog').dialog({
        autoOpen: false,
        width: 650,
        position: ['center', 100]
    });

    $("#flag a").click(function() {
        $.ajax({
            url: '/pub/flag',
            data: {idPub: <?php echo $this->pub->id; ?>},
            success: function (data) {
                $('#dialog').html(data);
                $('#dialog').dialog('open');
            }
        })
        return false;
    });

    $('#photos a').lightBox();

    $('#edit-section-button').click(function(e) {
